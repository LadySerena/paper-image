{
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "minecraft-server-tiede",
      "image_name": "paper-mc-1-16-1-{{timestamp}}",
      "image_description": "paper-mc image",
      "source_image_family": "serena-base-debian-10",
      "image_family": "serena-minecraft",
      "disk_size": 40,
      "disk_type": "pd-ssd",
      "ssh_username": "packer",
      "zone": "us-central1-a"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "world.tar.gz",
      "destination": "/tmp/world.tar.gz"
    },
    {
      "type": "file",
      "source": "paper.deb",
      "destination": "/tmp/paper.deb"
    },
    {
      "type": "ansible-local",
      "playbook_file": "paper-install.yaml"
    },
    {
      "type": "shell",
      "inline": [
        "ls -alh /minecraft-data/"
      ]
    }
  ]
}